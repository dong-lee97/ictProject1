<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.Resume_register">

    <LinearLayout
        android:id="@+id/write_resume"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_backward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/jalnan"
            android:text="이력서 수정"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/write_resume"
        android:layout_marginTop="5dp"
        android:background="@color/mainColor"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_photo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/edit_text_file_name1"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/bmjua_ttf"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_text_file_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/age"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/bmjua_ttf"
                android:padding="8dp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/edit_text_age1"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/bmjua_ttf"
                android:text="나이"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_text_age1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/bmjua_ttf"
                android:padding="8dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/profileLayout"
        android:layout_marginTop="5dp"
        android:background="@color/mainColor"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/fixResumeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line2"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:text="경력"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/experience1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua_ttf"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:text="세부사항"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/detail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex) 세븐일레븐 6개월"
                android:fontFamily="@font/bmjua_ttf"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_address" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:text="근무 가능 지역"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/possible_region1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex) 서울시 마포구, 전체"
                android:fontFamily="@font/bmjua_ttf"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_calender" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:text="희망 근무 일시"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/possible_day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex) 2020년 5월 1일 ~ 12월 31일"
                android:fontFamily="@font/bmjua_ttf"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_upload1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/mainColor"
            android:fontFamily="@font/bmjua_ttf"
            android:text="수정" />

    </LinearLayout>


</RelativeLayout>